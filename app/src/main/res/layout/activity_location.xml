<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_cameraZoom="11"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:outlineSpotShadowColor="@color/gray_bg"
        android:outlineAmbientShadowColor="@color/gray_bg"
        android:layout_marginBottom="32dp"
        android:padding="20dp"
        android:background="@color/red_main"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hotel_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_hotel_white"
            android:drawableRight="@drawable/ic_location_white"
            android:text="Alamat"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
    </LinearLayout>

</FrameLayout>
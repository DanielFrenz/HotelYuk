<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="kmr"
            type="com.example.hotelyuk.entity.Kamar" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_bg_rv">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="16dp"
                android:loadImage="@{kmr.imgUrl}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Nama Kamar"
                        android:text="@{kmr.namaKamar}"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_harga_kamar"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:hint="Harga"
                        android:padding="3dp"
                        android:text="@{String.valueOf(kmr.harga)}"
                        android:textColor="@color/red_text" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPesan"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/rounded_corners"
                        android:text="Pesan"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>